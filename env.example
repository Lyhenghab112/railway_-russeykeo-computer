# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-a-random-string
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=computershop
MYSQL_PORT=3306

# Alternative: Use MYSQL_URL for cloud databases (Railway, etc.)
# MYSQL_URL=mysql://username:password@host:port/database

# Email Configuration (for OTP verification)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Payment Configuration (Bakong KHQR)
BAKONG_ACCOUNT_ID=your-bakong-account-id
BAKONG_ACCOUNT_NAME=your-account-name

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Application URLs
BASE_URL=http://localhost:5000
